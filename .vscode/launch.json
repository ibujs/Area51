    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Meteor",
            "port": 9229,
            "restart": true,
            "sourceMaps": true,
            "protocol": "inspector"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "localhost:3000",
            // Remove the // in the next lines to be able to use alternative chrome-based browsers by modifying "runtimeExecutable"
            //"runtimeExecutable": "chrome",
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "url": "localhost:3000",
            "webRoot": "${workspaceRoot}",
            "port": 9222
        }
    ]
}
